// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model visitors {
  id        String   @id @default(uuid())
  ip        String   @unique
  visits    Int      @default(0)
  org       String?
  hostname  String?
  country   String?
  region    String?
  city      String?
  latitude  Float?
  longitude Float?
  timezone  String?
  country_code String?
  postal String?
  continent String?
  is_eu Boolean?
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

